<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit_celsius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="224dp"
        android:layout_marginBottom="13dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Temperatura em Celsius"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/button_conversor"
        app:layout_constraintStart_toStartOf="@+id/button_conversor"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_conversor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:text="Converter graus Celsius em Fahreneit"
        app:layout_constraintBottom_toTopOf="@+id/text_fahreneit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_celsius" />

    <TextView
        android:id="@+id/text_fahreneit"
        android:layout_width="99dp"
        android:layout_height="0dp"
        android:layout_marginBottom="310dp"
        android:gravity="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_conversor" />
</androidx.constraintlayout.widget.ConstraintLayout>