<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_Euros"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/button_converter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:text="Converter Euros em DÃ³lares"
        app:layout_constraintBottom_toTopOf="@+id/text_valorDolares"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_valoresEuros" />

    <EditText
        android:id="@+id/edit_valoresEuros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="279dp"
        android:layout_marginBottom="27dp"
        android:ems="10"
        android:hint="Insira o valor em Euros"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/button_converter"
        app:layout_constraintStart_toStartOf="@+id/button_converter"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_valorDolares"
        android:layout_width="205dp"
        android:layout_height="74dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="410dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/button_converter"
        app:layout_constraintTop_toBottomOf="@+id/button_converter" />
</androidx.constraintlayout.widget.ConstraintLayout>